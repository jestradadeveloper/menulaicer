<%
qr_code = RQRCode::QRCode.new(menu_url(@menu))
svg = qr_code.as_svg(
  color: "000",
  shape_rendering: "crispEdges",
  module_size: 11,
  standalone: true,
  use_path: true
)
%>
<div class="flex justify-center py-6 my-6">
  <%=svg.html_safe%>
</div>
<div class="flex w-10/12 mx-auto justify-center flex-col items-center">
  <h1 class="heading"><%= @menu.title %></h1>
  <div class="flex flex-col justify-center items-center w-full mt-3  divide-y">
    <% @menu.menu_items.group_by(&:category).each do | category, items| %>
      <div class="flex flex-col w-full my-2">
        <h2 class="font-bold my-6"><%= category %></h2>
        <% items.each do |menu_item| %>
          <div class="flex justify-center mb-3 w-full py-4">
            <div class="flex flex-col md:flex-row md:max-w-xl rounded-lg bg-white shadow-lg w-full">
              <% if menu_item.image_url.present? %>
                <img class="w-full h-96 md:h-auto object-cover md:w-48 rounded-t-lg md:rounded-none md:rounded-l-lg" src="<%=menu_item.image_url%>" alt="" />
              <% end %>
              <div class="p-6 flex flex-col justify-start">
                <h5 class="text-gray-900 text-xl font-medium mb-2"><%= menu_item.item_name %></h5>
                <p class="text-gray-700 text-base mb-4">
                  <%= menu_item.description %>
                </p>
                <p class="text-gray-600 text-xs">$<%= menu_item.price  %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
