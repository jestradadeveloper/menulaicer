<%= render 'layouts/header' %>
<div class="flex flex-col container mx-auto flex flex-col mt-28">
  <h1 class="font-bold text-4xl">Menus</h1>
  <%
    session = GoogleDrive::Session.from_config("sheetmenu-362021-8b3508189548.json.erb")
    spreadsheet = session.spreadsheet_by_key("1MAw1XnHOE6TfaRGof6gxa-BYrUGXpe84Qtt9o7nv1-0")
    ws = spreadsheet.worksheets[0]
    key, values = ws.rows.first, ws.rows[1..-1]
  %>
  <table class="table-auto">
    <thead>
      <tr>
        <th><%= ws[1,1] %></th>
        <th><%= ws[1,2] %></th>
      </tr>
    </thead>
    <tbody>
      <%  (2..ws.num_rows).each do |row|  %>
        <tr>
          <% (1..ws.num_cols).each do |col|  %>
            <td>
              <%= ws[row, col]%>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
